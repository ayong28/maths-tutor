{
  "name": "maths-tutor",
  "version": "1.0.0",
  "description": "Maths tutoring worksheet generator",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/web",
    "build": "npm run build -w apps/web",
    "preview": "npm run preview -w apps/web",
    "api:dev": "npm run dev -w packages/api",
    "api:build": "npm run build -w packages/api",
    "api:start": "npm run start -w packages/api",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:web": "npm test -w apps/web",
    "test:web:watch": "npm run test:watch -w apps/web",
    "test:all": "npm test && npm test -w apps/web",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:report": "playwright show-report",
    "generate": "tsx src/cli/generate-worksheet.ts generate",
    "generate:list": "tsx src/cli/generate-worksheet.ts list",
    "generate:tags": "tsx src/cli/generate-worksheet.ts tags"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "jest": "^30.2.0",
    "prettier": "3.7.4",
    "prisma": "^6.19.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^6.19.0",
    "@types/pdfkit": "^0.17.3",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3"
  }
}

{
  "name": "@maths-tutor/api",
  "version": "1.0.0",
  "description": "Express API server for maths tutoring worksheet system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run db:generate && tsx watch src/index.ts",
    "build": "npm run db:generate && tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "generate:worksheet": "tsx scripts/cli/generate-worksheet.ts",
    "data:import-json": "tsx scripts/data/import-json-to-db.ts",
    "data:import-markdown": "tsx scripts/data/migrate-markdown-to-db.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@prisma/client": "^6.19.0",
    "@prisma/adapter-pg": "^7.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "prisma": "^6.19.0",
    "tsx": "^4.7.0"
  }
}
